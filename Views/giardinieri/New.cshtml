@model Progetto.Models.giardiniere
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro Nuovo Giardiniere</h2>


@using (Html.BeginForm("Save", "giardinieri"))
{
    <div class="form-group">
        <label>indirizzo email</label>
        @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.nome)
        @Html.TextBoxFor(m => m.nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.cognome)
        @Html.TextBoxFor(m => m.cognome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.nome)
    </div>
    @Html.AntiForgeryToken(); <!--per evitare attacchi cross-site request forgery-->
    <button type="submit" class="btn btn-primary">register</button>
}