@model Progetto.Models.paesaggista
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro Nuovo Paesaggista</h2>

@using (Html.BeginForm("Create", "paesaggisti"))
{
    <!--actionresult Create per instanziare nuovo paesaggista nel database-->
    <div class="form-group">
    <!--al posto di scrivere puro HTML-->
        <label>indirizzo email</label>
        @Html.TextBoxFor(m => m.email, new { @class = "form-control" }) <!--il new oggetto acconcia il textbox-->
        @Html.ValidationMessageFor(m => m.email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.nome)
        @Html.TextBoxFor(m => m.nome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.cognome)
        @Html.TextBoxFor(m => m.cognome, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.cognome)
    </div>
    @Html.AntiForgeryToken(); <!--per evitare attacchi cross-site request forgery-->
    <button type="submit" class="btn btn-primary">register</button>
}